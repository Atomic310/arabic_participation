<%= stylesheet_link_tag 'events.css' %>
<body>
<p id="notice"><%= notice %></p>

<h1>Events</h1>
<button type="button" class="indexButton"><%=
  link_to 'Download as Excel',
  events_path(format: :xlsx)
%></button>

<button type="button" class="indexButton"><%= link_to 'New Event', new_event_path %></button>
<button onclick="myFunction()" class= "indexButton">Dark Mode</button>

<table>
  <thead>
    <tr>
      <th>Event</th>
      <th>Date</th>
      <th>Title</th>
      <th>Description</th>
      <th>Location</th>
      <th>Price</th>
      <th>Event type</th>
	  <th>Participation</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
  <% getPart %>
    <% @events.each do |event| %>
      <tr>
		<% getPart %>
        <td><%= event.event_id %></td>
        <td><%= event.date %></td>
        <td><%= event.title %></td>
        <td><%= event.description %></td>
        <td><%= event.location %></td>
        <td><%= event.price %></td>
        <td><%= event.event_type %></td>
		<td><%= event.participation %></td>
        <td><%= link_to 'Show', event %></td>
        <td><%= link_to 'Edit', edit_event_path(event) %></td>
        <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
		<% getPart %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


</body>