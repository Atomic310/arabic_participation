<%= stylesheet_link_tag 'events.css' %>
<body>
<p id="notice"><%= notice %></p>

<p>
  <strong>Event:</strong>
  <%= @event.event_id %>
</p>

<p>
  <strong>Date:</strong>
  <%= @event.date %>
</p>

<p>
  <strong>Title:</strong>
  <%= @event.title %>
</p>

<p>
  <strong>Description:</strong>
  <%= @event.description %>
</p>

<p>
  <strong>Location:</strong>
  <%= @event.location %>
</p>

<p>
  <strong>Price:</strong>
  <%= @event.price %>
</p>

<p>
  <strong>Event type:</strong>
  <%= @event.event_type %>
</p>

<p>
  <strong>Participation:</strong>
  <%= @event.participation %>
</p>

<% if officer_signed_in? %>
<button type="button" class="showButton"><%= link_to 'Edit', edit_event_path(@event) %></button> |
<% end %>

<button type="button" class="showButton"><%= link_to 'Back', events_path %></button>

</body>