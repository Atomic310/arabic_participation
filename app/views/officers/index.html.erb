<%= stylesheet_link_tag 'officers.css' %>
<body>
<p id="notice"><%= notice %></p>

<h1>Officers</h1>

<button onclick="myFunction()" class="indexButton">Dark Mode</button>
<button type="button" class="indexButton"><%= link_to 'Edit Profile', edit_officer_registration_path %></button>


<table>
  <thead>
    <tr>
      <th>Uin</th>
      <th>Position</th>
      <th>Password</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @officers.each do |officer| %>
      <tr>
        <td><%= officer.uin %></td>
        <td><%= officer.position %></td>
        <td><%= officer.password %></td>
        <td><%= link_to 'Show', officer %></td>
        <% if officer_signed_in? %>
          <td><%= link_to 'Edit', edit_officer_path(officer) %></td>
          <td><%= link_to 'Destroy', officer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
        </tr>
    <% end %>
  </tbody>
</table>

<br>

<script>
function myFunction() {
   var element = document.body;
   element.classList.toggle("dark_mode");
}

</body>