<%= stylesheet_link_tag 'members.css' %>
<p id="notice"><%= notice %></p>
<body>

<h1>Members</h1>

<% if officer_signed_in? %>
  <button type="button" class="indexButton"><%= link_to 'New Member', new_member_path %></button>
<% end %>

<button type="button" class="indexButton"><%= link_to 'Back', root_path %></button>

<button onclick="myFunction()" class= "indexButton">Dark Mode</button>


<table>
  <thead>
    <tr>
      <th>Uin</th>
      <th>First name</th>
      <th>Last name</th>
      <th>Email</th>
      <th>Classification</th>
      <th>Arabic lvl</th>
      <th>Payment status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @members.each do |member| %>
      <tr>
        <td><%= member.uin %></td>
        <td><%= member.first_name %></td>
        <td><%= member.last_name %></td>
        <td><%= member.email %></td>
        <td><%= member.classification %></td>
        <td><%= member.arabic_lvl %></td>
        <td><%= member.payment_status %></td>
        <td><%= link_to 'Show', member %></td>
        <% if officer_signed_in? %>
          <td><%= link_to 'Edit', edit_member_path(member) %></td>
          <td><%= link_to 'Destroy', member, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
        </tr>
    <% end %>
  </tbody>
</table>

<br>



<script>
function myFunction() {
   var element = document.body;
   element.classList.toggle("dark_mode");
}

</body>