<%= form_with(model: member) do |form| %>
  <% if member.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(member.errors.count, "error") %> prohibited this member from being saved:</h2>

      <ul>
        <% member.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :uin %>
    <%= form.number_field :uin %>
  </div>

  <div class="field">
    <%= form.label :first_name %>
    <%= form.text_field :first_name %>
  </div>

  <div class="field">
    <%= form.label :last_name %>
    <%= form.text_field :last_name %>
  </div>

  <div class="field">
    <%= form.label :email %>
    <%= form.text_field :email %>
  </div>

  <div class="field">
    <%= form.label :classification %>
    <%= form.text_field :classification %>
  </div>

  <div class="field">
    <%= form.label :arabic_lvl %>
    <%= form.select :arabic_lvl, %w{Beginner Intermediate Advanced}, :prompt => 'Select', required: true %>
  </div>

  <div class="field">
    <%= form.label :payment_status %>
    <%= form.select :payment_status, %w{Paid Unpaid}, :prompt => 'Select', required: true %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
